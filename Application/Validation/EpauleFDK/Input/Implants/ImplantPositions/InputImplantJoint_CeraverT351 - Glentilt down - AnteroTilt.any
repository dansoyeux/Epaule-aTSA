        #if HumExternalRotation == -21
        AnyVar px = -.002 + 0.0005;     //AP : Anterieur = +   
        AnyVar py = 0.003 - 0.003;     //IS : Superieur = +  
        AnyVar pz = 0.001 - 0.0053;     //ML : Lateral = +
        #endif
        
        #if HumExternalRotation == -14
        AnyVar px = -.002 + 0.0005;     //AP : Anterieur = +   
